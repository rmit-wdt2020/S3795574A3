@model Account
@{
    ViewData["Title"] = "Bill Pay List";
}
<div>
    <h1 class="display-4">Bill Pay List</h1>

    <h3>Your Bill Pay List</h3>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(x => x.BillPays[0].Payee.PayeeID)</th>
            <th>@Html.DisplayNameFor(x => x.BillPays[0].Payee.Name)</th>
            <th>@Html.DisplayNameFor(x => x.BillPays[0].Amount)</th>
            <th>@Html.DisplayNameFor(x => x.BillPays[0].ScheduleDate)</th>
            <th>@Html.DisplayNameFor(x => x.BillPays[0].Period)</th>
            <th>Block Status</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var bill in Model.BillPays)
        {
            var ScheduleDate = DateTime.SpecifyKind(bill.ScheduleDate, DateTimeKind.Utc);
    <tr>
        <td>@Html.DisplayFor(x => bill.Payee.PayeeID)</td>
        <td>@Html.DisplayFor(x => bill.Payee.Name)</td>
        <td>@Html.DisplayFor(x => bill.Amount)</td>
        <td>@bill.ScheduleDate.ToLocalTime()</td>
        <td>@Html.DisplayFor(x => bill.Period)</td>
        <td>@Html.DisplayFor(x => bill.IsLocked)</td>
        <td>
            <a class="btn btn-primary"
               asp-action="Edit" asp-route-id="@bill.BillPayID">Modify</a>
        </td>
        <td>
            <a class="btn btn-primary" style="background-color:red ;border-color:red"
               asp-action="Delete" asp-route-id="@bill.BillPayID">Delete</a>
        </td>
    </tr>
        }
    </table>
</div>
@model Customer
@{
    ViewData["Title"] = "Delete";
}
<div class="jumbotron">
    <h1>Delete User</h1>
    <p>This page is for delete user</p>
</div>
<div class="container">
    <div class="row">
        <p class="text-danger">
            <Strong>NOTE</Strong>: When you delete a user, all related accounts and records will be deleted.
    </div>
    <div class="row">
        <p class="text-danger">
            <Strong>Are you sure you want to do this?</Strong>
        </p>
    </div>
    <div class="row">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CustomerID" />
            <input type="submit" value="Yes, I knew the risk." class="btn btn-danger" />
        </form>
    </div>
</div>
<div class="container">
    <div>
        <a asp-controller= "Dashboard" asp-action="Index">Back to List</a>
    </div>
</div>
